    <script>
        $(document).ready(function() {

            var url = "https://api.rootnet.in/covid19-in/notifications";
            $.getJSON(url, function(data) {
                var number = 1;
                var helpData = '';
                $.each(data.data.notifications, (key, value) => {
                    helpData += '<tr>';
                    helpData += '<th>' + number + '</th>';
                    helpData += '<th>' + value.title.slice(0, 9) + '</th>';
                    helpData += '<th>' + value.title.slice(10, value.title.length) + '</th>';
                    helpData += '<th>' + '<a href=' + value.link + '>' + value.link + '</a></th>';
                    helpData += '</tr>';
                    number++;
                });
                $('#linkTable').append(helpData);
            });

        });
    </script>
